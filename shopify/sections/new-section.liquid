<div style="overflow: hidden;">
  <div class="wrapper">
    {% for i in (1..2) %}
      <div class="wrapper__edgrunner">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'labelText' %}
              <div>
                {{ block.settings.textId }}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  * { margin: 0; padding: 0; box-sizing: border-box; }

  .wrapper { background-color: aqua; display: flex; overflow: hidden; width: 200vw; }
  .wrapper__edgrunner { width: 100%; height: 100px; color: {{ section.settings.favouriteColor }}; animation-duration: 5s;
  background-color: aqua; animation-name: runner; overflow: hidden; animation-timing-function: linear;
  animation-iteration-count: infinite; display: flex; justify-content: space-around; }

  @keyframes runner { 0% { transform: translateX(0); } 100% { transform: translateX(-100%); } }
</style>

{% schema %}
{
  "name": "main secting",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "favouriteColor",
      "label": "change color",
      "default": "#000000"
    }
  ],
  "max_blocks": 8,
  "blocks": [
    {
      "type": "labelText",
      "name": "string",
      "settings": [
        {
          "id": "textId",
          "type": "text",
          "label": "t:sections.all.padding.section_padding_heading",
          "default": "your text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "our secting"
    }
  ]
}
{% endschema %}
