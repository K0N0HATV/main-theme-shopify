  .p {
    color: {{ section.settings.favouriteColor }}
  }
{% endstyle %}

{% schema %}
  {
    "name": "main secting",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "favouriteImage",
        "label": "change image"
      }, {
        "type": "color",
        "id": "favouriteColor",
        "label": "change color"
      }
    ],
    "presets": [
      {
        "name": "our secting"
      }
    ]
  }
{% endschema %}