<section>
  <div class="container">
    <div class="d-flex flex-column gap-0 marg-b">
      <div class="projects">
        {% unless section.settings.title_projects == blank %}
          <h2 class="h2">{{ section.settings.title_projects }}</h2>
          <hr>
        {% endunless %}
        {% unless section.settings.paragraph_projects == blank %}
          <p class="txt txt-15">{{ section.settings.paragraph_projects }}</p>
        {% endunless %}
      </div>
      <div class="project-cards d-flex e--dsk">
        <div class="project-cards-item">
          <img
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project1.jpg?v=1677694570"
            alt="Kingdom Tower"
          >
          <div class="title">
            <h3 class="title-head">Kingdom Tower</h3>
            <p class="title-parag">Marble Flooring</p>
          </div>
        </div>
        <div class="project-cards-item">
          <img src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project2.jpg?v=1677694570" alt="Dubai mall">
          <div class="title">
            <h3 class="title-head">Dubai mall</h3>
            <p class="title-parag">Wood Flooring</p>
          </div>
        </div>
        <div class="project-cards-item">
          <img
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project3.jpg?v=1677694570"
            alt="King Road Offices"
          >
          <div class="title">
            <h3 class="title-head">King Road Offices</h3>
            <p class="title-parag">Outdoor Flooring</p>
          </div>
        </div>
        <div class="project-cards-item">
          <img
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project4.jpg?v=1677694570"
            alt="Beach Tower Alupang"
          >
          <div class="title">
            <h3 class="title-head">Beach Tower Alupang</h3>
            <p class="title-parag">Wood Flooring</p>
          </div>
        </div>
      </div>
      <div
        class="swiper project mySwiper3 swiper-initialized swiper-horizontal swiper-css-mode e--mob"
      >
        <div
          class="swiper-wrapper"
          id="swiper-wrapper-1432e667cd7711d0"
          aria-live="polite"
        >
          <div
            class="swiper-slide swiper-slide-active"
            role="group"
            aria-label="1 / 4"
          >
            <picture>
              <img
                class="swiper-picture"
                src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project1.jpg?v=1677694570"
                alt="Kingdom Tower"
              >
            </picture>
            <div class="title">
              <h3 class="title-head">Kingdom Tower</h3>
              <p class="title-parag">Marble Flooring</p>
            </div>
          </div>
          <div
            class="swiper-slide swiper-slide-next"
            role="group"
            aria-label="2 / 4"
          >
            <picture>
              <img
                class="swiper-picture"
                src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project2.jpg?v=1677694570"
                alt="Dubai mall"
              >
            </picture>
            <div class="title">
              <h3 class="title-head">Dubai mall</h3>
              <p class="title-parag">Wood Flooring</p>
            </div>
          </div>
          <div class="swiper-slide" role="group" aria-label="3 / 4">
            <picture>
              <img
                class="swiper-picture"
                src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project3.jpg?v=1677694570"
                alt="King Road Offices"
              >
            </picture>
            <div class="title">
              <h3 class="title-head">King Road Offices</h3>
              <p class="title-parag">Outdoor Flooring</p>
            </div>
          </div>
          <div
            class="swiper-slide swiper-slide-active"
            role="group"
            aria-label="4 / 4"
          >
            <picture>
              <img
                class="swiper-picture"
                src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/project4.jpg?v=1677694570"
                alt="Beach Tower Alupang"
              >
            </picture>
            <div class="title">
              <h3 class="title-head">Beach Tower Alupang</h3>
              <p class="title-parag">Wood Flooring</p>
            </div>
          </div>
        </div>
        <div
          class="swiper-button-next swiper-button-next3"
          tabindex="0"
          role="button"
          style="display: flex;"
          aria-label="Next slide"
          aria-controls="swiper-wrapper-1432e667cd7711d0"
          aria-disabled="false"
        ></div>
        <div
          class="swiper-button-prev swiper-button-prev3 swiper-button-disabled"
          tabindex="-1"
          role="button"
          style="display: flex;"
          aria-label="Previous slide"
          aria-controls="swiper-wrapper-1432e667cd7711d0"
          aria-disabled="true"
        ></div>
        <span
          class="swiper-notification"
          aria-live="assertive"
          aria-atomic="true"
        ></span>
      </div>
      {% unless section.settings.title_btn_projects == blank %}
        <a
          class="button button-black button-big"
          href="
            {%- unless section.settings.link_collections_projects == blank -%}
            {{- section.settings.link_collections_projects -}}
            {%-  else -%}
            #
            {%- endunless -%}
          "
        >
          {{- section.settings.title_btn_projects -}}
        </a>
      {% endunless %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Projects",
  "settings": [
    {
      "type": "url",
      "id": "link_collections_projects",
      "label": "Change Link"
    },
    {
      "type": "text",
      "id": "title_projects",
      "label": "Enter title"
    },
    {
      "type": "textarea",
      "id": "paragraph_projects",
      "label": "Enter paragraph"
    },
    {
      "type": "text",
      "id": "title_btn_projects",
      "label": "Enter title btn"
    }
  ]
}
{% endschema %}
