<section>
  <div class="{% unless section.settings.checkbox_section_stretch %} section-container {% endunless %}">
    <div class="d-flex--default wrap {% if section.settings.checkbox_section_exchange %} d-flex--revert {% endif %}">
      <div class="description--default {% if section.settings.checkbox_section_stretch %} description--stretch {% endif %}">
        <div class="tal description__best_way {% if section.settings.checkbox_section_exchange -%} tar description__best_way--exchange {%- endif %}">
          <h3 class="h3 marg-b-25 {% if section.settings.checkbox_section_stretch %} color-white-stretch {% endif %}">
            The best way to restore beauty, youth, health and strength
          </h3>
          <p class="text marg-b-25 {% if section.settings.checkbox_section_stretch %}color-white-stretch{% endif %}">
            Dermacolla - the premium brand in German vitamins. They are aimed at preserving and restoring natural
            beauty, moisturizing the skin, accelerating hair growth and strengthening nails, delivering vital moisture
            to the tissues, and aiding the process that leads to the reduction of cellulite.
          </p>
          <a class="btn--small {% if section.settings.checkbox_section_stretch %}color-white-stretch{% endif %}" href=""
            >About dermacolla</a
          >
        </div>
      </div>
      <div class="video-wrap--default">
        <video
          class="video--default {% if section.settings.checkbox_section_stretch %}video--stretch{% endif %}"
          loop=""
          autoplay=""
          muted=""
          id="vid"
        >
          <source
            src="https://cdn.shopify.com/s/files/1/0613/5654/0062/files/dermacolla_video_1080.mp4?v=1652206982"
            type="video/mp4"
          >
        </video>
      </div>
    </div>
  </div>
</section>

<style>
  .d-flex--default {
    display: flex;
  }

  .d-flex--revert {
    flex-direction: row-reverse;
  }

  @media screen and (max-width: 992px) {
    .wrap {
      flex-direction: column;
    }
  }

  .description--default {
    width: 100%;
    flex-basis: 50%;
    display: flex;
    align-items: center;
    padding: 20px;
  }

  @media screen and (max-width: 992px) {
    .description--default {
      justify-content: center;
    }
  }

  .description--stretch {
    background-color: #111010;
  }

  .tal {
    text-align: left;
  }
  .tar {
    text-align: right;
  }

  .description__best_way {
    max-width: 700px;
    margin-left: auto;
  }

  @media screen and (max-width: 992px) {
    .description__best_way {
      margin-left: 0;
      text-align: center;
    }
  }

  .description__best_way--exchange {
    margin-right: auto;
    margin-left: 0;
  }

  .h3 {
    text-transform: uppercase;
    font-size: 20px;
    font-weight: bold;
    line-height: 1;
  }

  @media screen and (min-width: 768px) {
    .h3 {
      font-size: 20px;
    }
  }

  @media screen and (min-width: 992px) {
    .h3 {
      font-size: 25px;
    }
  }

  @media screen and (min-width: 1200px) {
    .h3 {
      font-size: 42px;
    }
  }

  .text {
    font-size: 16px;
    letter-spacing: 0.5px;
    line-height: 20px;
  }

  @media screen and (min-width: 992px) {
    .text {
      line-height: 25px;
    }
  }

  .btn--small {
    font-size: 12px;
    letter-spacing: 1.2px;
    line-height: 17px;
    color: #000000;
    text-transform: uppercase;
    text-decoration: underline;
    transition: all 0.3s ease-in-out;
  }

  .btn--small:hover {
    text-decoration: none;
  }

  .video-wrap--default {
    flex-basis: 50%;
    display: flex;
    align-items: center;
    max-height: 600px;
    overflow: hidden;
  }

  .video--default {
    width: 100%;
  }

  @media screen and (min-width: 2379px) {
    .video--stretch {
      margin-top: -5vw;
    }
  }

  .marg-b-25 {
    margin-bottom: 25px;
  }

  .section-container {
    padding: 0 20px;
    max-width: 1500px;
    margin: 0 auto;
  }

  .color-white-stretch {
    color: #ffffff;
  }

  .tar {
    text-align: right;
  }
</style>

{% schema %}
{
  "name": "best_way",
  "settings": [
    {
      "type": "checkbox",
      "id": "checkbox_section_stretch",
      "label": "Stretch the section to full screen"
    },
    {
      "type": "checkbox",
      "id": "checkbox_section_exchange",
      "label": "Swap the block of text and picture"
    }
  ]
}
{% endschema %}
