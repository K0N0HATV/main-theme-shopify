{%- liquid
  assign title_length = section.settings.title_solutions | size
  assign paragraph_length = section.settings.paragraph_solutionsg | size
  assign title_btn_length = section.settings.title_btn_solutions | size
-%}

<section class="container marg-b">
  <div class="df-64">
    <div class="d-flex solutions w-full fl-start">
      {% unless section.settings.title_solutions == blank and section.settings.paragraph_solutionsg == blank %}
        <div class="solutions-title">
          {% unless section.settings.title_solutions == blank %}
            {% if title_length <= 44 %}
              <h2 class="h2">{{ section.settings.title_solutions }}</h2>
            {% else %}
              {% render 'error', title_characters: 44 %}
            {% endif %}
          {% endunless %}
          {% unless section.settings.paragraph_solutionsg == blank %}
            {% if paragraph_length <= 244 %}
              <p class="txt txt-20">{{ section.settings.paragraph_solutionsg }}</p>
            {% else %}
              {% render 'error', title_characters: 244 %}
            {% endif %}
          {% endunless %}
        </div>
      {% endunless %}
      <div class="d-flex solutions-images e--dsk">
        <picture
          ><img src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room1.jpg?v=1677694570" alt="Room"
        ></picture>
        <picture
          ><img src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room2.jpg?v=1677694570" alt="Room"
        ></picture>
        <picture
          ><img src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room3.jpg?v=1677694570" alt="Room"
        ></picture>
      </div>
      {% unless section.settings.title_btn_solutions == blank %}
        {% if title_btn_length <= 22 %}
          <a
            class="button button-black e--dsk"
            href="
              {%- unless section.settings.link_collections_solutions == blank -%}
              {{- section.settings.link_collections_solutions -}}
              {%-  else -%}
              #
              {%- endunless -%}
            "
          >
            {{- section.settings.title_btn_solutions -}}
          </a>
        {% else %}
          {% render 'error', title_characters: 22 %}
        {% endif %}
      {% endunless %}
    </div>
    <div class="shrink-0 video-block e--dsk">
      <picture
        ><img src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/video.jpg?v=1677694570" alt="Video"
      ></picture>
      <div class="video-block-content">
        <div>
          <p class="txt-18">Watch</p>
          <p class="txt-18 black">Video tour</p>
        </div>
      </div>
    </div>
  </div>
  <div
    class="swiper simple mySwiper2 swiper-initialized swiper-horizontal swiper-css-mode e--mob"
  >
    <div
      class="swiper-wrapper"
      id="swiper-wrapper-1432e667cd7711d0"
      aria-live="polite"
    >
      <div
        class="swiper-slide swiper-slide-active"
        role="group"
        aria-label="1 / 3"
      >
        <picture>
          <img
            class="swiper-picture"
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room1.jpg?v=1677694570"
            alt="Room"
          >
        </picture>
      </div>
      <div
        class="swiper-slide swiper-slide-next"
        role="group"
        aria-label="2 / 3"
      >
        <picture>
          <img
            class="swiper-picture"
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room2.jpg?v=1677694570"
            alt="Room"
          >
        </picture>
      </div>
      <div class="swiper-slide" role="group" aria-label="3 / 3">
        <picture>
          <img
            class="swiper-picture"
            src="https://cdn.shopify.com/s/files/1/0722/5180/1894/files/room3.jpg?v=1677694570"
            alt="Outdoor Flooring"
          >
        </picture>
      </div>
    </div>
    <div
      class="swiper-button-next swiper-button-next2"
      tabindex="0"
      style="display: flex;"
      role="button"
      aria-label="Next slide"
      aria-controls="swiper-wrapper-1432e667cd7711d0"
      aria-disabled="false"
    ></div>
    <div
      class="swiper-button-prev swiper-button-prev2 swiper-button-disabled"
      tabindex="-1"
      style="display: flex;"
      role="button"
      aria-label="Previous slide"
      aria-controls="swiper-wrapper-1432e667cd7711d0"
      aria-disabled="true"
    ></div>
    <span
      class="swiper-notification"
      aria-live="assertive"
      aria-atomic="true"
    ></span>
  </div>
</section>

{% schema %}
{
  "name": "Solutions",
  "settings": [
    {
      "type": "text",
      "id": "title_solutions",
      "label": "Enter title"
    },
    {
      "type": "textarea",
      "id": "paragraph_solutionsg",
      "label": "Enter paragraph"
    },
    {
      "type": "text",
      "id": "title_btn_solutions",
      "label": "Enter title btn"
    },
    {
      "type": "url",
      "id": "link_collections_solutions",
      "label": "Change Link"
    }
  ]
}
{% endschema %}
